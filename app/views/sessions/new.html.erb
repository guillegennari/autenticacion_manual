<h1>Login</h1>

<div class="row">
    <%= form_for(:session, url: sessions_create_path) do |f| %>

        <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
        </div>
       
        <%= f.submit "Acceder", class: "btn btn-primary" %>

    <% end %>
</div>
